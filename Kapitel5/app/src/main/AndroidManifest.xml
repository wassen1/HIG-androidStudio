<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wassemann.kapitel5">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InteractionActivity"
            android:label="@string/title_activity_interaction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SimpleDrawActivity"
            android:label="@string/title_activity_simple_draw"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnimationActivity"
            android:label="@string/title_activity_animation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>