<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/drawBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="22dp"
        android:text="@string/drawBtn"
        android:onClick="SimpleDrawActivity"/>
    <Button
        android:id="@+id/interactionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drawBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin="22dp"
        android:text="@string/interactionBtn"
        android:onClick="InteractionActivity"/>
    <Button
        android:id="@+id/animationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interactionBtn"
        android:layout_centerHorizontal="true"
        android:layout_margin="22dp"
        android:text="@string/animationBtn"
        android:onClick="AnimationActivity"/>

</RelativeLayout>
